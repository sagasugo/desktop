{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SagaSugo!",
  "version": "0.1.3",
  "identifier": "com.sugasugo.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "SagaSugo!",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 520,
        "center": true,
        "decorations": false,
        "backgroundColor": "#0a0a0a"
      }
    ],
    "security": {
      "csp": "http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../static/*": "static/"
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:dataset.db"
      ]
    }
  }
}
